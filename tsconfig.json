{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "playwright"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests", "playwright.config.ts"]
}
